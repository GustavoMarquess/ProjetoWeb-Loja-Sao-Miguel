{{#unless error}}
<h1>Editar Produto</h1>

     <div class="mb-3">

     <form action="/update_prod" method="post">
        <label for="formGroupExampleInput" class="form-label">Descricao:</label>
           <input type="hidden" value="{{id}}" name="id">
           <input value="{{descricao}}" type="text" class="form-control" id="descricao" name="descricao"
                    placeholder="Digite nova Descrição" required>
      </div>
      <div class="mb-3">
        <label for="formGroupExampleInput2" class="form-label">Preço:</label>
        <input value="{{preco}}" type="number" step = "0,01" class="form-control" id="preco" name="preco"
                    placeholder="Digite novo preço" required>
      </div>

      <label for="vitrine" class="mb-3">É de Vitrine?</label>
      <div class="form-check form-check-inline">
      <input class="form-check-input" type="radio" name="vitrine" id="vitrine" value="true">
      <label class="form-check-label" for="vitrine">Sim</label>
      </div>
      <div class="form-check form-check-inline">
      <input class="form-check-input" type="radio" name="vitrine" id="vitrine" value="false">
      <label class="form-check-label" for="vitrine">Não</label>
      </div>

       <div class="mb-3">
        <label for="src_img" class="src_img">Caminho da Foto:</label>
        <input value="{{src_img}}" type="text" class="form-control" id="src_img" name="src_img">
      </div>
      <div class="text-center">
      <button type="submit" class=" btn btn-danger">Salvar Alterações</button>
      </div>
    </div>
    </form>

    {{else}}
<div class="card bg-danger p-4 mt-5 text-white">
    <div class="card-body fw-bold text-center">
        Houve um problema: {{problema}}
    </div>
</div>
{{/unless}}