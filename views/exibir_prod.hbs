<div class="container my-4 font text-center">
  <div class="rounded mt-3">
    <h1>Lista Produtos</h1>
    {{#if table}}
    <table class="table table-striped table-light">
        <thead>
            <tr>
                <th scope="col">#ID</th>
                <th scope="col">Descrição</th>
                <th scope="col">Preço</th>
                <th scope="col">Vitrine</th>
                <th scope="col">Imagem</th>
            </tr>
        </thead>
        <tbody>
            {{#each produtos}}
            <tr>
                <th scope="row">{{id}}</th>
                <td>{{descricao}}</td>
                <td>{{preco}}</td>
                <td>{{vitrine}}</td>
                <td>
                    <div class="row g-1">
                        <div class="col-6 col-md-3">
                             <form action="/editar_prod" method="post">
                                <input type="hidden" name="id"  value="{{id}}">
                                 <button class="w-100 btn btn-info">Editar</button>
                             </form>
                        </div>
                        <div class="col-6 col-md-3">
                                <form action="/excluir_prod" method="post">
                                <input type="hidden" name="id"  value="{{id}}">
                                <button class="w-100 btn btn-danger">Excluir</button>
                             </form>
                        </div>
                    </div>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    {{else}}
    <div class="card mt-4">
        <div class="card-body">
            Nenhum dado encontrado!
        </div>
    </div>
    {{/if}}
  </div>
</div>