{{#unless error}}
<h1>Editar Usuário</h1>

<div class="mb-3">

     <form action="/update_users" method="post">
       
        <label for="formGroupExampleInput" class="form-label">Nome:</label>
           <input type="hidden" value="{{id}}" name="id">
           <input value="{{nome}}" type="text" class="form-control" id="nome" name="nome"
                    placeholder="Digite seu nome" required>
      </div>
      <div class="mb-3">
        <label for="formGroupExampleInput2" class="form-label">e-mail</label>
        <input value="{{email}}" type="email" class="form-control" id="email" name="email"
                    placeholder="Digite seu email" required>
      </div>

        <label for="inputPassword5" class="form-label">Senha</label>
      <input type="password" id="senha" name="senha" value="{{senha}}" class="form-control" aria-describedby="passwordHelpBlock" required>
      <div id="passwordHelpBlock" class="form-text">
        Your password must be 8-20 characters long, contain letters and numbers, and must not contain spaces, special characters, or emoji.
      </div>


      <button class="btn btn-danger">Salvar Alterações</button>
    </div>
    </form>

    {{else}}
<div class="card bg-danger p-4 mt-5 text-white">
    <div class="card-body fw-bold text-center">
        Houve um problema: {{problema}}
    </div>
</div>
{{/unless}}